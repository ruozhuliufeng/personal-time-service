{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "personal-time-service",
  "version": "0.1.0",
  "identifier": "com.personal-time-service.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Personal Time Service",
        "label": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "skipTaskbar": true,
        "center": true,
        "fullscreen": false,
        "resizable": true,
        "maximizable": false,
        "minimizable": true,
        "closable": true,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "shortDescription": "A lightweight desktop time management and task tracking application",
    "longDescription": "Personal Time Service is a transparent desktop overlay application for managing your time with calendar views and task tracking. Features include customizable transparency, task reminders, and drag-and-drop component positioning.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
